{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "A User Managment Servive",
    "main": "index.js",
    "author": "Anas Sain",
    "license": "ISC",
    "scripts": {
        "build": "tsc",
        "run:build": "node ./dist/src/server.js",
        "format:check": "npx prettier . --check",
        "format:fix": "npx prettier . --write",
        "lint": "eslint .",
        "lint:check": "npx eslint .",
        "lint:fix": "npx eslint . --fix",
        "dev": "cross-env NODE_ENV=dev nodemon ./src/server.ts ",
        "prepare": "husky install",
        "test": "jest --no-cache --coverage --all --runInBand",
        "test:watch": "jest --watchAll --runInBand",
        "start": "ts-node src/server.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate --dataSource ./src/config/data-source.ts",
        "migration:create": "typeorm-ts-node-commonjs migration:create",
        "migration:run": "typeorm-ts-node-commonjs migration:run --dataSource ./src/config/data-source.ts"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.20",
        "@types/http-errors": "^2.0.3",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^16.11.10",
        "@types/supertest": "^2.0.16",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.0.2",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.0.1",
        "prettier": "3.0.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "10.7.0",
        "typescript": "4.5.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "^0.3.17",
        "winston": "^3.11.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    }
}
